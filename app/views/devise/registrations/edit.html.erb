<h2 class="text-2xl font-bold">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 'w-11/12 flex w-full flex-col gap-1 items-center mt-24 border-2 p-4') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex w-full flex-col">
    <%= f.label :email, class: 'text-semibold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border-1 shadow-md h-8 outline-blue-500 p-1' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="flex w-full flex-col">
    <%= f.label :password, class: 'text-semibold' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'border-1 shadow-md h-8 outline-blue-500 p-1' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="flex w-full flex-col">
    <%= f.label :password_confirmation, class: 'text-semibold' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border-1 shadow-md h-8 outline-blue-500 p-1' %>
  </div>

  <div class="flex w-full flex-col">
    <%= f.label :current_password, class: 'text-semibold' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'border-1 shadow-md h-8 outline-blue-500 p-1' %>
  </div>

  <div class="bg-green-500 mt-4 text-center rounded-sm p-2 text-white">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
